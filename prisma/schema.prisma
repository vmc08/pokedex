// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Stat {
  id        Int         @id @default(autoincrement())
  name      String
  StatValue StatValue[]
}

model Ability {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  effect   String    @db.VarBit(255)
  pokemons Pokemon[]
}

model Type {
  id         Int       @id @default(autoincrement())
  name       String    @unique
  strengths  Type[]    @relation("TypeToType")
  weaknesses Type[]    @relation("TypeToType")
  pokemons   Pokemon[]
}

model Pokemon {
  id            Int         @id @default(autoincrement())
  pokedexNumber Int         @map("pokedex_number")
  name          String      @unique
  height        Int
  weight        Int
  abilities     Ability[]
  types         Type[]
  statValues    StatValue[]
}

model StatValue {
  id        Int     @id @default(autoincrement())
  value     Int
  stat      Stat    @relation(fields: [statId], references: [id])
  statId    Int
  Pokemon   Pokemon @relation(fields: [pokemonId], references: [id])
  pokemonId Int
}
